<Window x:Class="Praktika3_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika3_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGrid1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Clients.ClientSurname}" Header="Фамилия"/>
                <DataGridTextColumn Binding="{Binding Clients.ClientName}" Header="Имя"/>
                <DataGridTextColumn Binding="{Binding Clients.ClientMiddleName}" Header="Отчество"/>
                <DataGridTextColumn Binding="{Binding Clients.PhoneNumber}" Header="Номер Телефона"/>
                <DataGridTextColumn Binding="{Binding Clients.Email}" Header="Email"/>
                <DataGridTextColumn Binding="{Binding Orders.Order_Number}" Header="Номер заказа"/>
                <DataGridTextColumn Binding="{Binding Orders.Products}" Header="Товары"/>
                <DataGridTextColumn Binding="{Binding ReceivingDateTime}" Header="Дата получения заказа"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
